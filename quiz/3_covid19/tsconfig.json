{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES5",
        "outDir": "./dist",
        "moduleResolution": "Node",
        "lib": [
            "ES2015",
            "DOM",
            "DOM.Iterable"
        ],
        "noImplicitAny": true,
        "sourceMap": true,
        "module": "ES2015",
        "strict": true
        // "typeRoots": ["./node_modules/@types", "./types"]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}